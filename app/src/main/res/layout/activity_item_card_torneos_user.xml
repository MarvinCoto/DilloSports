<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewTorneos"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/card_torneos_style_1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCardTorneosUser"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@drawable/trofeo" />

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/txtNombresTorneosUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ntorneos"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtDescripcionTorneoUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DesTorneos"
                android:textColor="#C3C3C3"
                android:textSize="12sp"
                android:layout_margin="3dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="6dp">

            <TextView
                android:id="@+id/txtUbicacionesTorneosUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicacion"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>