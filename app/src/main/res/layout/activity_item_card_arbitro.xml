<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardViewArbitro"
    android:layout_margin="16dp">

    <LinearLayout
        android:background="@drawable/card_torneos_style_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCardArbi"
            android:background="@drawable/images"
            android:layout_width="125dp"
            android:layout_height="125dp" />

        <ImageView
            android:id="@+id/imgCardLineaDos"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@drawable/element_grafic_1" />

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="125dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreArbitro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:text="Nombre"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textViewArbitro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Arbitro"
                android:textColor="#C3C3C3"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtEdadArbitro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="edad"
                android:textColor="#C3C3C3"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/imgEditarArbitro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/vector_asset_editar_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imgEliminarArbitro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/vector_asset_eliminar_1" />
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>